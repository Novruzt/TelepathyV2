<Prefab>
	<Window>
		<ListPanel HorizontalAlignment="Center"
				   HeightSizePolicy="CoverChildren"
				   WidthSizePolicy="CoverChildren"
				   MarginTop="10">

			<Children>

				<ButtonWidget
					Id="TelepathyV2TalkToMeButton"
					DoNotPassEventsToChildren="true"
					WidthSizePolicy="Fixed"
					HeightSizePolicy="Fixed"
					SuggestedWidth="227"
					SuggestedHeight="40"
					Brush="ButtonBrush2"
					MarginLeft="5"
					MarginRight="5"
					HorizontalAlignment="Center"
					UpdateChildrenStates="true"
					Command.Click="CallToTalk"
					IsVisible="@CanTalkTo"
					IsEnabled="@CanTalkTo">

					<Children>
						<TextWidget
							WidthSizePolicy="StretchToParent"
							HeightSizePolicy="StretchToParent"
							Brush="Kingdom.GeneralButtons.Text"
							Text="@CallToTalkText"/>
					</Children>

				</ButtonWidget>

			</Children>
		</ListPanel>
	</Window>
</Prefab>
